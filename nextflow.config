
params {
    //preset params:
    rundir                  ="${launchDir.baseName}" 
    genome                  ="hg38" //default assembly is hg38, unless --genome is set!
    minGB                   =38   // minimum total input size of ubams (in gb). Default 30 for hifi, 38 for new all+hifi setup
    
    //unset params
    help                    =null
    input                   =null
    allReads                =null       // test using allReads as default, then extract HiFi reads for variantcalling
    failedReads             =null
    hifiReads               =null
    noMerge                 =null
    gatk                    =null
    aligned                 =null
    samplesheet             =null
    params.singleOnly       =null
    //unset params - analysis controls
    skipQC                  =null
    skipVariants            =null
    skipSV                  =null
    skipSTR                 =null
    groupedOutput           =null
    jointCall               =null
    hpo                     =null
    intSS                   =null // use for 3 or 5 col manual samplesheet + new naming of inputfiles
    nfs_fast                =null
    test                    =null
    summary                 =null
}

switch (params.genome) {
    case 'hg38':
    def sharedConfig = new File('/data/configs/nextflowLRS.config')
    if (sharedConfig.exists()) {
        includeConfig sharedConfig
    }
    break;

    case 't2t':
    def sharedConfig = new File('/data/configs/nextflowLRS_T2T.config')
    if (sharedConfig.exists()) {
        includeConfig sharedConfig
    }
    break;
}
